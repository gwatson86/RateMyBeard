<div>
    <h1>It's a danger zone ahead. Better loggin first.</h1>
</div>

<%= form_with url: kenny_login_path, method: :post do |f|%>
    <p>Username: <%= f.text_field 'user_name' %></p>
    <p>Password: <%= f.password_field 'password' %></p>
    <%= f.submit 'Loggin'%>
<% end %>
<% if flash[:errors] %>
    <p><font color="crimson"><%= flash[:errors] %></font></p>
<% end %>

<body background="http://www.thexboxhub.com/wp-content/uploads/2016/11/kenny-loggins.jpg"></body>

