<div>
    <% if session[:user_id] == @user.id%>
        <%= link_to 'Add Beard', new_beard_path %>
    <% end %>
</div>
<h1>Username: <%= @user.user_name %>
    <% if @user.id != session[:user_id]%>
        <% if @is_following %>
            <%=form_with url: :unfollow, method: :post do |f|%>
                <%= f.submit 'Unfollow' %>
            <% end%>
        <% else %>
            <%=form_with url: :follow, method: :post do |f|%>
                <%= f.submit 'Follow' %>
            <% end%>
        <% end%>
    <% end %>
</h1>
<a href="<%= user_followers_path(@user.id) %>">Followers:</a> <%= @user.followers.count %></h4>  | <a href="<%= user_following_path(@user.id) %>">Following: </a><%= @user.following.count %>


<img src="<%= @user.profile_picture %>">
<h2>Name: <%= @user.name %></h2>
<h3>Bio: </h3><br>
<p><%= @user.bio %></p>
<h2>My Beards: </h2><br>
<div>
    <% @user.beards.each do |beard|%>
            <a href="/beards/<%= beard.id  %>">
                <img src="<%= beard.picture_url %>" id="thumbnail" >
            </a>
    <% end %>
</div>



